<div class="card">
  <h1 class="text-center">Find a place to:</h1>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 listing">
        <%= form_tag locations_path, :method => :get do %>
          <div class="form-inline text-center">
            <%= select_tag :categorytype, options_for_select(['Eat', 'Fun', 'Move', 'Stay'], @categorytype), prompt: "What?", class: "form-control" %>
            <%= select_tag :category, options_for_select(['Accommodation','Bar/cafe','Cinema','Cultural site','Museum/Gallery','Park','Public transport','Restaurant'], @category), prompt: "Choose a category", class: "form-control" %>
            <%= text_field_tag(:name, nil, placeholder: "Enter location name", class: "form-control") %>
            <%= submit_tag "Search", :name => nil, class: "btn btn-primary" %>
          </div>
          <div class="checkboxes">
            <div class="col-sm-3 col-sm-offset-3">
              <h4>Accessibility</h4>
              <ul class="list-unstyled">
                <li>
                  <%= check_box_tag(:wheelchair_access) %>
                  <%= label_tag :wheelchair_access %>
                </li>
                <li>
                  <% if params[:step_free_access] %>
                    <%= check_box_tag(:step_free_access, "1", true) %>
                  <% else %>
                    <%= check_box_tag(:step_free_access, "1", false) %>
                  <% end %>
                  <%= label_tag :step_free_access %>
                </li>
              </ul>
            </div>
            <div class="col-sm-6">
              <h4>Services</h4>
              <ul class="list-unstyled">
                <li>
                  <%= check_box_tag(:automatic_doors) %>
                  <%= label_tag :automatic_doors %>
                </li>
                <li>
                  <%= check_box_tag(:disabled_parking) %>
                  <%= label_tag :disabled_parking %>
                </li>
                <li>
                  <%= check_box_tag(:accessible_toilets) %>
                  <%= label_tag :accessible_toilets %>
                </li>
              </ul>
            </div>

          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
  </div>
</div>



<!-- ########################### CARDS Listing-->
  <div class="card">
    <div class="row">
      <div class="col-xs-6">
      <%= will_paginate @locations, :class => 'digg_pagination padding-left' %>
        <div class="listing text-center">
          <div class="row">
          <% @locations.each do |location| %>
            <div class="col-xs-6">
              <p class="location-details"><%= location.name %></p>
              <% if location.photo? %>
              <%= image_tag location.photo.url(:thumb), height: '100px', width: '100px', :class=> "img-show" %>
              <% else %>
              <%= image_tag 'placeholder.jpg', height: '100px', :class=> "img-show" %>
              <% end %>
              <p><%= link_to "View location", location_path(location), class: "btn btn-primary" %></p>
              </div>
            <% end %>
            </div>
          </div>
        </div>
      <div class="col-xs-6">
      <!-- %= image_tag 'map-placeholder.png', width: '80%' %> -->
      <div id="map" class="map-show" style="width: 95%; height: 600px;"></div>

    <% content_for(:after_js) do %>
    <%= javascript_tag do %>
    $(document).on('ready', function() {
      handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function(){
        markers = handler.addMarkers(<%= raw @markers.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
      });
    })
  <% end %>
<% end %>

    </div>
  <i class="fa fa-chevron-circle-left"></i><%= link_to "Back", :back %>
</div>
</div>
</div>
