<div class="card">
  <div class="container">
    <div class="row">
      <div class="col-xs-6">
        <h2 class="text-center"> Hello <%= current_user.name %> </h1>
        <div class="text-center">
        <div class='img-circle'><%= image_tag(current_user.picture.url(:medium), :width => "200px", class: "img-circle") %></div>
        <div>
          <p>E-mail: <%= current_user.email %></p>
          <p>City: <%= current_user.city %></p>
        </div>

      </div>
      <div class="btn btn-primary pull-right"<%= link_to "edit",  edit_user_registration_path %></div>

      </div>

      <div class="col-xs-6">
      <h2 class="text-center">My reviewed locations</h2>

      <% if @review %>
      <% @reviews.each do |review| %>

      <%= link_to review.location.name, location_path(review.location) %>
      in <%= review.location.city %>
        <div class="row">
            <div class="speech-bubble">
              <div class="arrow left"></div>
              <div class="rating">
                <div class="review-info">
                  by <%= review.user.name %>
                  at <%= "#{review.created_at.strftime('%v %R')}" %>
                </div>
                <% review.rating.times do %>
                  <i class="fa fa-star on padding-sides-3"></i>
                <% end %>
                <% (5 - review.rating).times do %>
                  <i class="fa fa-star grey padding-sides-3"></i>
                <% end %>
                <%= review.content %>
                <%= link_to 'delete', account_review_path(review), method: :delete, data: { confirm: "Are you sure?" } %>
              </div>
              <%# else %>
              <p>No reviews added yet.</p>
              <%# end %>
            </div>

          </div>
        <% end %>
      <% end %>
    </div>
    </div>

  </div>
</div>
